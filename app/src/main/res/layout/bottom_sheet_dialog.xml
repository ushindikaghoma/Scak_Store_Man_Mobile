<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_view">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACHAT -PAIEMENT CASH"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_marginLeft="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ProgressBar
            android:id="@+id/bottom_dialog_progess"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="1.6"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL A PAYER"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bottom_dialog_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$5"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOLDE CAISSE"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bottom_dialog_solde_caisse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$5"
            android:layout_weight="1"
            android:gravity="right"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.LetGo.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/bottom_dialog_total_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="MONTANT TOTAL"
            android:inputType="numberDecimal"/>

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/bottom_sheet_annuler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ANNULER"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/bottom_sheet_confirmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONFIRMER"
            android:layout_weight="1"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>