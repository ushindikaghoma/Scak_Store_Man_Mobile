<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_milk">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#fff"
        app:cardElevation="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="5dp"
        app:contentPadding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_milk">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/model_releve_arrow"
                   android:layout_width="match_parent"
                   android:layout_height="30dp"
                   android:layout_gravity="center"
                   android:layout_weight="3"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="0.5">
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="6dp">

                       <TextView
                           android:id="@+id/model_releve_libelle"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:paddingStart="5dp"
                           android:layout_weight="1"
                           android:layout_marginLeft="7dp"/>


                   </LinearLayout>
                   <LinearLayout
                       android:id="@+id/model_article_linear_details"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:padding="6dp">

                       <TextView
                           android:id="@+id/model_releve_date"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:paddingLeft="10dp"
                           android:layout_weight="1"/>

                       <TextView
                           android:id="@+id/model_releve_montant"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textStyle="bold"
                           android:gravity="right"
                           android:padding="0dp"
                           android:layout_weight="1"/>

                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>